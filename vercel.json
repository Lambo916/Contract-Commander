{
  "version": 2,
  "buildCommand": "bash build-vercel.sh",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "api/_server/**"
    },
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "api/_server/**"
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
